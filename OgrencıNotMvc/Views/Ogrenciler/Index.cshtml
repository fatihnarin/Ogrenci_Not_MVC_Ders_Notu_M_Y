@using OgrencıNotMvc.Models.Entity_Framework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>FOTOĞRAF</th>
        <th>CİNSİYET </th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OGRENCIID</td>
            <td>@ogr.OGRAD</td>
            <td>@ogr.OGRSOYAD</td>
            <td>@ogr.OGRFOTO</td>
            <td>@ogr.OGRCINSIYET</td>
            <td>@ogr.TBLKULUPLER.KULUPAD</td>
            <td>
                <a href="/Ogrenciler/Sil/@ogr.OGRENCIID" class="btn btn-danger">SİL</a>
                <a href="/Ogrenciler/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">GÜNCELLE</a>
            </td>
        </tr>
        }
    </tbody>

</table>
<a href="/Ogrenciler/OgrenciEkle" class="btn btn-primary">ÖĞRENCİ EKLE</a>
