@using OgrencıNotMvc.Models.Entity_Framework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var drs in Model)
        {
        <tr>
            <td>@drs.DERSID</td>
            <td>@drs.DERSAD</td>
            <td>
                <a href="/Dersler/Sil/@drs.DERSID" class="btn btn-danger">SİL</a>
                <a href="/Dersler/DersGetir/@drs.DERSID" class="btn btn-success">GÜNCELLE</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Dersler/YeniDers" class="btn btn-primary">DERS EKLE</a>

